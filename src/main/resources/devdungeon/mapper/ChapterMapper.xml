<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="devdungeon.mapper.ChapterMapper">
    <insert id="insertChapter" useGeneratedKeys="true" keyProperty="id" parameterType="devdungeon.domain.ChapterVO">
        INSERT INTO chapter(title, description, is_public) VALUES(#{title}, #{description}, #{isPublic})
    </insert>

    <insert id="insertWhitelist">
        INSERT INTO whitelist(chapter_id, user_id) VALUES
        <foreach collection="userIds" item="userId" separator=",">
            (#{chapterId}, #{userId})
        </foreach>
    </insert>

    <select id="selectPrivateWritableChapter" resultType="devdungeon.domain.ChapterVO">
        SELECT * FROM chapter WHERE id in
        (SELECT chapter_id FROM whitelist WHERE user_id=#{userID})
    </select>

    <select id="selectPublicWritableChapter" resultType="devdungeon.domain.ChapterVO">
        SELECT * FROM chapter WHERE is_public=1
    </select>
</mapper>